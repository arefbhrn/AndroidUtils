<resources>

    <style name="AnimatedActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/activity_fading_slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_fading_slide_in_from_left</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="DialogAnimationFromBottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="DialogAnimationFromUp">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_up</item>
    </style>

    <style name="DialogAnimationFromLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="DialogAnimationFromRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

    <style name="PrimaryButton" parent="headlineRegular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="radius">10dp</item>
        <item name="backgroundColor">@color/colorPrimaryDark</item>
        <item name="rippleColor">@color/gray_ripple</item>
        <item name="android:textColor">@color/bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SecondaryButton" parent="PrimaryButton">
        <item name="backgroundColor">@color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="DialogPrimaryButton" parent="PrimaryButton">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="DialogSecondaryButton" parent="DialogPrimaryButton">
        <item name="backgroundColor">@color/transparent</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

</resources>
