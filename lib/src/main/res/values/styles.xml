<resources>

    <style name="AnimatedActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_in_from_right
        </item>
        <item name="android:activityOpenExitAnimation">
            @anim/activity_fading_slide_out_to_left
        </item>
        <item name="android:activityCloseEnterAnimation">
            @anim/activity_fading_slide_in_from_left
        </item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_out_to_right
        </item>
    </style>

    <style name="DialogAnimationFromBottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
    </style>

    <style name="DialogAnimationFromUp">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_up</item>
    </style>

    <style name="DialogAnimationFromLeft">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="DialogAnimationFromRight">
        <item name="android:windowEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_right</item>
    </style>

</resources>
